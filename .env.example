# Hospital Lab Environment Variables
# Copy this file to .env and fill in the values

# ============================================
# Database Credentials
# ============================================
MYSQL_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
MYSQL_DATABASE=openemr
MYSQL_USER=openemr
MYSQL_PASSWORD=CHANGE_ME_OPENEMR_DB_PASSWORD

# ============================================
# OpenEMR Configuration
# ============================================
OE_MYSQL_HOST=openemr-db
OE_MYSQL_USER=openemr
OE_MYSQL_PASS=CHANGE_ME_OPENEMR_DB_PASSWORD
OE_MYSQL_DB=openemr

# ============================================
# Orthanc PACS Credentials
# ============================================
ORTHANC_USERNAME=admin
ORTHANC_PASSWORD=CHANGE_ME_ORTHANC_PASSWORD
ORTHANC_NAME=HospitalPACS
ORTHANC_AET=ORTHANC
ORTHANC_DICOM_PORT=4242

# ============================================
# Velociraptor Configuration
# ============================================
VELOCIRAPTOR_ADMIN_USER=admin
VELOCIRAPTOR_ADMIN_PASSWORD=CHANGE_ME_VELOCIRAPTOR_PASSWORD
VELOCIRAPTOR_ORG_NAME=Hospital Lab
VELOCIRAPTOR_GUI_PORT=8000
VELOCIRAPTOR_FRONTEND_PORT=8001

# ============================================
# Network Configuration
# ============================================
HOSPITAL_NETWORK_NAME=hospitalnet
HOSPITAL_NETWORK_SUBNET=172.20.0.0/16

# ============================================
# Security Settings
# ============================================
# Set to 'true' for production
ENABLE_TLS=false
TLS_CERT_PATH=/path/to/cert.pem
TLS_KEY_PATH=/path/to/key.pem

# ============================================
# Backup Configuration
# ============================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_MAX_SIZE=100M
LOG_MAX_FILES=10

# ============================================
# HIPAA Compliance
# ============================================
AUDIT_LOGGING_ENABLED=true
DATA_ENCRYPTION_AT_REST=false  # Enable for production
ACCESS_LOG_RETENTION_DAYS=2555  # 7 years for HIPAA
